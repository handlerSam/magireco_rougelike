<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_adv_21011"
    tools:context=".BonusActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_frame"
        android:background="@color/shader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bonus_title"
            android:layout_width="708px"
            android:layout_height="88px"
            android:layout_marginTop="50px"
            android:background="@drawable/battle_end_item_name_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plot"
                android:text="出发前，姐姐似乎留给了我们什么..."
                android:textColor="#FFFFFF"
                android:textSize="37px"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/first_choice_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bonus_title">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bonus_choice0_layout"
                android:gravity="center"
                android:background="@drawable/dialog_choice"
                android:layout_marginVertical="15px"
                android:layout_width="1304px"
                android:layout_height="268px">

                <TextView
                    android:id="@+id/bonus_choice0_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:fontFamily="@font/plot"
                    android:text="好像是一大包东西，但是不知为何打了个很紧的死结..."
                    android:textColor="#575954"
                    android:textSize="46px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bonus_choice0_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="250px"
                    android:layout_marginBottom="40px"
                    android:fontFamily="@font/plot"
                    android:text="获得3000CC"
                    android:textColor="#AB575954"
                    android:textSize="42px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bonus_choice0_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bonus_choice1_layout"
                android:gravity="center"
                android:background="@drawable/dialog_choice"
                android:layout_marginVertical="15px"
                android:layout_width="1304px"
                android:layout_height="268px">

                <TextView
                    android:id="@+id/bonus_choice1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:fontFamily="@font/plot"
                    android:text="似乎是一小袋CC..."
                    android:textColor="#575954"
                    android:textSize="46px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bonus_choice1_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="250px"
                    android:layout_marginBottom="40px"
                    android:fontFamily="@font/plot"
                    android:text="获得3000CC"
                    android:textColor="#AB575954"
                    android:textSize="42px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bonus_choice1_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bonus_choice2_layout"
                android:gravity="center"
                android:background="@drawable/dialog_choice"
                android:layout_marginVertical="15px"
                android:layout_width="1304px"
                android:layout_height="268px">

                <TextView
                    android:id="@+id/bonus_choice2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:fontFamily="@font/plot"
                    android:text="似乎是一小袋CC..."
                    android:textColor="#575954"
                    android:textSize="46px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bonus_choice2_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="250px"
                    android:layout_marginBottom="40px"
                    android:fontFamily="@font/plot"
                    android:text="获得3000CC"
                    android:textColor="#AB575954"
                    android:textSize="42px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bonus_choice2_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memoria_choose_frame"
        android:visibility="visible"
        android:background="@color/shader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/memoria_choose_clear"
            android:layout_width="410px"
            android:layout_height="79px"
            android:layout_marginTop="50px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="633px"
            android:layout_height="752px"
            android:layout_marginEnd="0px"
            android:background="@drawable/frame2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/memoria_choose_clear">

            <com.live2d.rougelike.CardView
                android:id="@+id/showingMemoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84px"
                android:layout_marginLeft="84px"
                android:layout_marginTop="140px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/showingMemoriaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="66px"
                android:fontFamily="@font/info"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="38px"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="420px"
                android:layout_marginLeft="250px"
                android:layout_marginTop="144px"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/HPShowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/info"
                    android:text=""
                    android:textColor="@color/colorShader"
                    android:textSize="36px"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ATKShowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/info"
                    android:text=""
                    android:textColor="@color/colorShader"
                    android:textSize="36px"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/DEFShowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/info"
                    android:text=""
                    android:textColor="@color/colorShader"
                    android:textSize="36px"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/break_throughLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="290px"
                android:layout_marginLeft="290px"
                android:layout_marginTop="294px"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="39px"
                    android:layout_height="39px"
                    android:src="@drawable/break_through" />

                <ImageView
                    android:layout_width="39px"
                    android:layout_height="39px"
                    android:src="@drawable/break_through" />

                <ImageView
                    android:layout_width="39px"
                    android:layout_height="39px"
                    android:src="@drawable/break_through" />

                <ImageView
                    android:layout_width="39px"
                    android:layout_height="39px"
                    android:src="@drawable/break_through" />
            </LinearLayout>

            <TextView
                android:id="@+id/coolTimeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="282px"
                android:layout_marginTop="345px"
                android:fontFamily="@font/info"
                android:text=""
                android:textColor="@color/colorBrown"
                android:textSize="26px"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/skillName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82px"
                android:layout_marginLeft="82px"
                android:layout_marginTop="390px"
                android:fontFamily="@font/info"
                android:text=""
                android:textColor="@color/colorPurple"
                android:textSize="30px"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/skillIcon"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginEnd="4px"
                android:layout_marginRight="4px"
                android:layout_marginBottom="312px"
                android:src="@drawable/icon_skill_1012"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/skillDescription"
                android:layout_width="480px"
                android:layout_height="wrap_content"
                android:layout_marginStart="82px"
                android:layout_marginLeft="82px"
                android:layout_marginTop="450px"
                android:fontFamily="@font/info"
                android:text=""
                android:textColor="@color/colorShader"
                android:textSize="30px"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/purchase_button"
                android:layout_width="373px"
                android:layout_height="126px"
                android:layout_marginEnd="115px"
                android:layout_marginRight="115px"
                android:layout_marginBottom="26px"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/purchase_button_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/empty_button" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/purchase_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/info"
                        android:text="购买"
                        android:textColor="#FFFFFF"
                        android:textSize="40px"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/purchase_button_text">

                        <TextView
                            android:id="@+id/memoria_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/info"
                            android:text="1600"
                            android:textColor="#FFFFFF"
                            android:textSize="28px"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <ImageView
                            android:id="@+id/memoria_cc_icon"
                            android:layout_width="28.75px"
                            android:layout_height="28.75px"
                            android:layout_marginStart="10px"
                            android:layout_marginTop="1px"
                            android:background="@drawable/cc"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/shop_item_price" />
                    </LinearLayout>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/memoria_choose_clear">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frame3"
                android:layout_width="1294px"
                android:layout_height="86px"
                android:background="@drawable/frame3_without_carry_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:fontFamily="@font/info"
                    android:text="14/400"
                    android:textColor="#FFFFFF"
                    android:textSize="40px"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="1211px"
                android:layout_height="713px"
                android:background="@drawable/frame4"
                app:layout_constraintEnd_toEndOf="@id/frame3"
                app:layout_constraintStart_toStartOf="@id/frame3"
                app:layout_constraintTop_toBottomOf="@id/frame3">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30px"
                    android:layout_marginTop="5px"
                    android:layout_marginBottom="15px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/star_4_memoria_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent">

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/bar_4_star"
                            android:layout_width="707px"
                            android:layout_height="32px"
                            android:background="@drawable/bar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/star_4_memoria_list" />

                        <LinearLayout
                            android:id="@+id/star_3_memoria_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:layout_marginTop="5px"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/bar_4_star">

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/bar_3_star"
                            android:layout_width="707px"
                            android:layout_height="32px"
                            android:background="@drawable/bar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/star_3_memoria_list" />

                        <LinearLayout
                            android:id="@+id/star_2_memoria_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:layout_marginTop="5px"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/bar_3_star"></LinearLayout>
                    </LinearLayout>

                </ScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="150px"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/cc_frame"
            android:layout_marginEnd="50px"
            android:layout_width="241px"
            android:layout_height="63px">

            <TextView
                android:id="@+id/cc_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32px"
                android:fontFamily="@font/info"
                android:text=" 55000 "
                android:textColor="@color/itemTextYellow"
                android:textSize="28px"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="01"
                android:shadowColor="#000000"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/grief_seed_frame"
            android:layout_width="264px"
            android:layout_height="135px">
            <TextView
                android:id="@+id/grief_seed_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32px"
                android:fontFamily="@font/info"
                android:text=" 15 "
                android:textColor="@color/itemTextYellow"
                android:textSize="28px"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="01"
                android:shadowColor="#000000"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>