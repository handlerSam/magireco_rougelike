<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shop_item_frame"
    android:layout_marginEnd="16px"
    android:layout_width="343.62px"
    android:layout_height="295.39px">

    <ImageView
        android:id="@+id/shop_item_image"
        android:layout_width="92.25px"
        android:layout_height="67.41px"
        android:layout_marginTop="64.17px"
        android:background="@drawable/red_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_item_name"
        android:layout_width="270px"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:autoSizeMaxTextSize="32px"
        android:autoSizeMinTextSize="21px"
        android:layout_marginTop="40.36px"
        android:fontFamily="@font/info"
        android:text="火之宝石"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorShader"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_item_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66.24px"
        android:layout_marginBottom="24.84px"
        android:fontFamily="@font/info"
        android:text="价格"
        android:textColor="@color/white"
        android:textSize="25.2px"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/shop_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="74.7px"
        android:layout_marginBottom="25.2px"
        android:fontFamily="@font/info"
        android:text="1600"
        android:textColor="@color/colorShader"
        android:textSize="25.2px"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cc_icon"
        android:layout_width="25.87px"
        android:layout_height="25.87px"
        android:layout_marginStart="9.315px"
        android:layout_marginBottom="27px"
        android:visibility="visible"
        android:background="@drawable/cc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/shop_item_price" />
</androidx.constraintlayout.widget.ConstraintLayout>