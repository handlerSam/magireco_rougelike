<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="1101px"
    android:layout_height="180px"
    android:layout_marginBottom="50px"
    android:background="@drawable/character_star_up_frame"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginStart="300px"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/purchase_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/left_char_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/left_char_image"
                android:layout_width="143px"
                android:layout_height="146px"
                android:background="@drawable/bg_fire"
                android:src="@drawable/card_10154_d"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/left_char_frame"
                android:layout_width="143px"
                android:layout_height="146px"
                android:background="@drawable/frame_rank_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/left_char_attr"
                    android:layout_width="40.5px"
                    android:layout_height="41.4px"
                    android:layout_marginStart="5.4px"
                    android:layout_marginTop="5.4px"
                    android:background="@drawable/tree"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.live2d.rougelike.StrokeTextView
                    android:id="@+id/left_lv_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4.5px"
                    android:layout_marginLeft="4.5px"
                    android:layout_marginBottom="5.4px"
                    android:fontFamily="@font/info"
                    android:text="Lv 28"
                    android:textColor="#FFFFFF"
                    android:textSize="25.2px"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/left_stars_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/left_char_star0"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />

                    <ImageView
                        android:id="@+id/left_char_star1"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />

                    <ImageView
                        android:id="@+id/left_char_star2"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />

                    <ImageView
                        android:id="@+id/left_char_star3"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />

                    <ImageView
                        android:id="@+id/left_char_star4"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/changeToArrow"
            android:layout_width="51px"
            android:layout_height="59px"
            android:layout_marginStart="30px"
            android:background="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/left_char_Layout"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/right_char_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/changeToArrow"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/right_char_image"
                android:layout_width="143px"
                android:layout_height="146px"
                android:background="@drawable/bg_fire"
                android:src="@drawable/card_10154_d"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/right_char_frame"
                android:layout_width="143px"
                android:layout_height="146px"
                android:background="@drawable/frame_rank_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/right_char_attr"
                    android:layout_width="40.5px"
                    android:layout_height="41.4px"
                    android:layout_marginStart="5.4px"
                    android:layout_marginTop="5.4px"
                    android:background="@drawable/tree"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.live2d.rougelike.StrokeTextView
                    android:id="@+id/right_lv_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4.5px"
                    android:layout_marginLeft="4.5px"
                    android:layout_marginBottom="5.4px"
                    android:fontFamily="@font/info"
                    android:text="Lv 28"
                    android:textColor="#FFFFFF"
                    android:textSize="25.2px"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/right_stars_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/right_char_star0"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />

                    <ImageView
                        android:id="@+id/right_char_star1"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />

                    <ImageView
                        android:id="@+id/right_char_star2"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />

                    <ImageView
                        android:id="@+id/right_char_star3"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />

                    <ImageView
                        android:id="@+id/right_char_star4"
                        android:layout_width="25px"
                        android:layout_height="28px"
                        android:src="@drawable/char_star" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/purchase_button"
        android:layout_width="224px"
        android:layout_height="76px"
        android:layout_marginEnd="32px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/purchase_button_background"
            android:src="@drawable/empty_button"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/midPoint"
            android:layout_width="1px"
            android:layout_height="1px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="15px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/midPoint"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/purchase_item"
                android:layout_width="35.1px"
                android:layout_height="50.7px"
                android:background="@drawable/grief_seed"/>
            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/info"
                android:text="-1"
                android:textColor="@color/white"
                android:textSize="24px"
                android:visibility="visible"
                android:layout_marginStart="5px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


        <TextView
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16px"
            android:fontFamily="@font/info"
            android:text="提升"
            android:textColor="@color/white"
            android:textSize="28px"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/midPoint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>