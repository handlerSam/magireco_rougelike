<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shop_item_frame"
    android:layout_marginEnd="18px"
    android:layout_width="381.8px"
    android:layout_height="328.21px">

    <ImageView
        android:id="@+id/shop_item_image"
        android:layout_width="102.5px"
        android:layout_height="74.9px"
        android:layout_marginTop="71.3px"
        android:background="@drawable/red_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44.85px"
        android:fontFamily="@font/info"
        android:text="火之宝石"
        android:textColor="@color/colorShader"
        android:textSize="36px"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_item_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73.6px"
        android:layout_marginBottom="27.6px"
        android:fontFamily="@font/info"
        android:text="价格"
        android:textColor="@color/white"
        android:textSize="28px"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/shop_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="83px"
        android:layout_marginBottom="28px"
        android:fontFamily="@font/info"
        android:text="1600"
        android:textColor="@color/colorShader"
        android:textSize="28px"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cc_icon"
        android:layout_width="28.75px"
        android:layout_height="28.75px"
        android:layout_marginStart="10.35px"
        android:layout_marginBottom="30px"
        android:visibility="visible"
        android:background="@drawable/cc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/shop_item_price" />
</androidx.constraintlayout.widget.ConstraintLayout>