<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240px"
    android:layout_height="240px">
    <ImageView
        android:id="@+id/background"
        android:background="@drawable/accele_plate"
        android:layout_margin="12px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/character"
        android:background="@drawable/card_10155_d"
        android:layout_marginHorizontal="0px"
        android:layout_marginBottom="10px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="61px"
        android:layout_height="61px"
        android:layout_marginStart="15px"
        android:layout_marginBottom="35px"
        android:background="@drawable/attribute_frame"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background" />

    <ImageView
        android:id="@+id/attribute"
        android:layout_width="51px"
        android:layout_height="51px"
        android:layout_marginStart="20px"
        android:layout_marginBottom="40px"
        android:background="@drawable/fire"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background" />

    <ImageView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="52px"
        android:layout_margin="12px"
        android:src="@drawable/charge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="69px"
        android:layout_height="69px"
        android:layout_marginEnd="12px"
        android:layout_marginBottom="39px"
        android:src="@drawable/blast_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/diamond0"
        android:layout_width="37px"
        android:layout_height="42px"
        android:layout_marginStart="0px"
        android:layout_marginTop="80px"
        android:background="@drawable/diamond_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/diamond1"
        android:layout_width="37px"
        android:layout_height="42px"
        android:layout_marginStart="15px"
        android:layout_marginBottom="38px"
        android:background="@drawable/diamond_grey"
        app:layout_constraintBottom_toBottomOf="@+id/diamond0"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/diamond2"
        android:layout_width="37px"
        android:layout_height="42px"
        android:layout_marginStart="40px"
        android:layout_marginBottom="30px"
        android:background="@drawable/diamond_grey"
        app:layout_constraintBottom_toBottomOf="@+id/diamond1"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>